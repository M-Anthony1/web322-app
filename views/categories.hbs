<div class="row">

    <div class="col-md-12">

     <h2>Categories <a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
     <hr />

     <div class="table-responsive">

        <table class = "table">

            <thead>
                <tr>
                    <th><strong>Category ID</strong></th>
                    <th><strong>Category Name</strong></th>    
                </tr>

            </thead>

            <tbody>
            {{#each categories}}

                <tr>
                    <td><a class = "link" href="/posts?category={{id}}">{{id}}</a></td>
                    <td><a class = "link" href="/posts?category={{id}}">{{category}}</a></td>
                    <td><a href="categories/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
                </tr>      
            {{/each}}
            </tbody>
            
            </table>
        </div>

    </div>
            {{#unless categories}}

            <div class="col-md-12 text-center">
                 <strong>{{message}}</strong>
            </div>

            {{/unless}}




</div>