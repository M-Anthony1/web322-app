

<div class="row">
    <div class="col-md-12">
    <h2>Posts</h2>
    <hr />  

    <div class="table-responsive">

        <table class = "table">

            <thead>
                <tr>
                    <th><strong>Post ID</strong></th>
                    <th><strong>Title</strong></th>
                    <th><strong>Post Date</strong></th>
                    <th><strong>Category</strong></th>
                    <th><strong>Published</strong></th>
                </tr>

            </thead>

            {{#each posts}}
            <tbody>

                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{postDate}}</td>
                    <td ><a class = "link" href="/posts?category={{category}}">{{category}}</a></td>
                    <td>{{published}}</td>
                </tr>      
            
            {{/each}}

            {{#unless posts}}

            <div class="col-md-12 text-center">
                 <strong>{{message}}</strong>
            </div>

            {{/unless}}

            </tbody>





        </table>
    </div>

 
    </div>
</div>