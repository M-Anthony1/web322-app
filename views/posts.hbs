

<div class="row">
    <div class="col-md-12">
        <h2>Posts  <a href="/posts/add" class="btn btn-success pull-right">Add Post</a> </h2>
        <hr />  

        <div class="table-responsive">

            <table class = "table">

             <thead>
                 <tr>
                     <th><strong>Post ID</strong></th>
                     <th><strong>Title</strong></th>
                     <th><strong>Post Date</strong></th>
                     <th><strong>Category</strong></th>
                     <th><strong>Published</strong></th>
                 </tr>

              </thead>

              <tbody>

                {{#each posts}}

                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{#formatDate postDate}}{{/formatDate}}</td>
                        <td ><a class = "link" href="/posts?category={{category}}">{{category}}</a></td>
                        <td>{{published}}</td>
                        <td><a href="./posts/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
                    </tr>      
                {{/each}}
            

             </tbody>

            </table>
        </div>
       
    </div>
        {{#unless posts}}

            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>

        {{/unless}}





</div>